    <!-- 3.WRITE A PROGRAM THAT DETERMINES WHETHER A PERSON IS ELIGIBLE TO VOTE BASED ON THEIR AGE (VOTING AGE IS 18 OR OLDER).USING TERNARY OPERATOR -->


    <script>
       

       let AGE=prompt("enter age of a person valid for voting");

       let valid_age  = (AGE>18) ? 'valid for voting':'Invalid age for voting';

       document.write(valid_age);

    </script>
    
