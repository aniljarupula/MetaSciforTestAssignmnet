<body>
    <!-- create the caluclator using the buttons ,user enters usng javascript -->
     <!-- buttons are created over here -->
      <div>
        <button class="btn btn-primary" type="button" onclick="add(n1,n2)">add(+)</button>
        <button class="btn btn-primary" type="button" onclick="sub(n1,n2)">sub(-)</button>
        <button class="btn btn-primary" type="button" onclick="mul(n1,n2)">mul(*)</button>
        <button class="btn btn-primary" type="button" onclick="div(n1,n2)">div(/)</button>
      </div>
     <script>
        let n1=parseFloat(prompt("enter value"));
        let n2=parseFloat(prompt("enter value"));

        function add(a,b) {
            let add= a+b;
            document.write(add);
            
        }

        function sub(c,d){

            let sub= c-d;
            document.write(sub);

        }

        function  mul(c,d){
            let mul= c*d;
            document.write(mul);
           
        }

        function div(a,b){
            let div= a/b;
            document.write(div);

        }

        


     </script>
